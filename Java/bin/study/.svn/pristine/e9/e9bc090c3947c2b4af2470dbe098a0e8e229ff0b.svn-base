function exLiAdd(tr, selRadio){
	var result = 0;
	$("input[name='mem_04_id']").each(function(){
		if ($(this).val() == selRadio) {
			alert("이미 추가되어 있습니다.");
			result++;
			return false;
		}
	});
	if (result > 0) {
		return false;
	}
	var td = tr.children();
	var html = "<li>" +
			"<b>"+ td.eq(1).text() +"</b> " +
			"<"+ td.eq(2).text() +"> "+
			td.eq(3).text() +
			"<input type='hidden' name='mem_04_id' id='mem_04_id' value='"+  selRadio +"' />" +
			"</li>";
	$(".exList").append(html);
	return "OK";
}

