		//count+=sqlSession.delete(Namespace + ".t_const_mem_del", const_no);
		if(csVO.getConst_no() >0 && paramMap.get("list") != null) {
			List<Map<String,Object>> list = (List<Map<String, Object>>) paramMap.get("list");
			for (int i = 0; i <list.size(); i++) {
