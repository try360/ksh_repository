			role		= #{role},
 			upt_id		= #{upt_id},
 			upt_date	= localtimestamp 			
		where user_no	= #{user_no}
		and erp_job		= #{erp_job}
		and appr_role	= #{appr_role}
		and use_yn = 'Y'
	</update>

