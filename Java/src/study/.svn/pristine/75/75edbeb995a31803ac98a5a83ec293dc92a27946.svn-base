 		select
			rol.user_no,
		    rol.role,
            rol.use_yn,
            rol.reg_id,
            rol.reg_date,
            rol.upt_id,
            rol.upt_date
 		from agwne.t_user_role rol 
 		where rol.use_yn = 'Y'
 		and rol.user_no in (select user_no from agwne.t_org_user where no_emp = #{user_id})
    </select>
    
