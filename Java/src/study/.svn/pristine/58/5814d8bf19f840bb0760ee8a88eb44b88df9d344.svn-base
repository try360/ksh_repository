@charset "EUC-KR";

.listTable tbody tr td strong {
	color: #bd0606;
}

.searchArea .groupText {
	display: inline-block;
	border: 1px solid #aaaaaa;
	padding: 3px;
	vertical-align: middle;
	margin-right: 5px;
	width: 120px; 
}

.searchArea .groupText .readonly {
	border: 0;
	text-align: center;
	width: 55px;
	padding: 0; margin: 0;
}

.searchArea .groupText input[name='searchTxt'] {
	padding: 0; margin: 0;
	border: 0;
	width: 55px;
	border-bottom: 1px dashed #CCCCCC;	
}

.searchArea .groupText input[name='searchTxt']:focus {
	outline: none;
}

.ui-selectmenu-button.ui-button {
	width: auto;
	height: 19px;
}

.ui-selectmenu-text {
	vertical-align: middle;
}
