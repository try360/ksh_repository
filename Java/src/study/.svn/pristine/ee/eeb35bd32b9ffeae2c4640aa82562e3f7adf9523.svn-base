#optionSearching {

}
#optionSearching label.title {
	display: inline-block;
	width: 80px;
}
#optionSearching ul li {
	display: inline-block;
	width: auto;
}

#accordion {
	border-bottom: 1px solid #ECECEC;
	margin: 0 25px 20px 25px;
}
#arcodion tr.active td {
	background: #ECECEC;
}
.searchArea {
	width: calc(100% - 55px);
}
.detail table tr td {
	padding-left: 15px;
	text-align: left;
}
.listTable span.sort {
	text-decoration: underline;
	cursor: pointer;
}

#optionSearching .checkboxset {
	display: block;
	margin-bottom: 2px;
}
#optionSearching label.title {
	float: left;
	padding-top: 7px;
	font-weight: bold;
}

input[name='addr_nm'] {
	padding: 5px 10px;
	width: calc(100% - 110px);
}

#searchBtn {
	margin-top: 10px;
}