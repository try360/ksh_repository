        return sqlSession.insert(Namespace + ".board_update", bbsVO);  
    }
    
    @Override
    public int board_totalCnt(HashMap<String, Object> listInfo)  throws Exception{
        return sqlSession.selectOne(Namespace + ".board_totalCnt", listInfo);
    }
    
