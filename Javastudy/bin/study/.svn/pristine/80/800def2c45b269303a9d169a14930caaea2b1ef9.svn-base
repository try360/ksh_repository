@charset "EUC-KR";

#popinpopWrap {
    width: 710px;
    height: 550px;
    background-color: #5f115d;
    border: 1px solid #333;
}

.popin_contents_form {
    margin: 10px;
    padding: 10px;
    width: 670px;
    height: 510px;
    background-color: #FFFFFF;
}

.popinTitle {
    margin: 10px 0;
    padding-bottom: 8px;
    color: #5f115d;
}

.popinSearch {
    margin: 0;
}
.popinSearch input[type=text] {
    padding: 3px 3px 3px 5px;
    width: 120px;
}

.popinBtn {
    margin: 0;
}

.searchArea input[type=image] {
    vertical-align: middle;
}

.resultArea {
    clear: both;
    border: 1px solid #999;
    height: 400px;
}

.headTable {
    margin: 0;
    padding: 0;
    width: 100%;
    table-layout: fixed;
}

.headTable th {
    background: #ECECEC;
    color: #666666;
    padding: 3px 5px;
    border-bottom: 1px solid #CCC;
    border-right: 1px solid #CCC;
    text-align: center;
}

.notice {
    clear: both;
    color: #c56922;
    font-size: 10pt;
    margin-bottom: 5px;
}
.bodyArea {
    height: 374px;
    overflow-x: hidden;
    overflow-y: scroll;
}
.bodyTable {
    margin: 0;
    padding: 0;
    width: 647px;
    table-layout: fixed;
}

.bodyTable td {
    padding: 2px 0;
    font-family: Dotum;
    font-size: 9pt;
    color: #666;
    text-align: center;
    border-bottom: 1px solid #EEE;
    border-right: 1px solid #EEE;
}
.bodyTable td:first-child {
    text-align: left;
    padding-left: 10px;
}
.bodyTable td:last_child {
	border-right : 0;
}

.bodyTable td strong {
    color: #c56922;
    font-weight: bold;
}
.popinTitle span.ui-icon {
	float: right; 
	background-image: url('/resources/js/jquery-ui-1.12.1.custom/images/ui-icons_cc0000_256x240.png');
}
#bodyResult tr:hover {
	background-color: #ECECEC;
}

#warningWrap {
    display: flex;
    align-items: center;
    justify-content: center;
    height: calc(100vh - 20px);
}
#warningWrap #logo {
    width: 100%;
    display: block;
}
#warningWrap #warning {
    display: block;
    border: 15px solid #ededed;
    border-radius: 15px;
    padding: 30px 50px;
    height: 200px;
}

#warning .image {
    float: left;
}

#warning .image img {
    width: 84%;
}

#warning .message {
    float:left;
    font-family: '¸¼Àº°íµñ';
    color: #666666;
}

#warning .message h1 {
    margin: 0;
    padding: 0;
}
#warning .message h2 {
    margin: 0;
    padding: 0;
}
#warning #btnArea {
    display: block;
    text-align: center;
    margin-top: 10px;
}
#warningWrap a.button:link, #warningWrap a.button:visited  {
    border: 1px solid #c56922;
    color: #FFFFFF;
    background-color: #f98c25;
    padding: 6px 25px;
    -webkit-border-radius: 5px;
    -moz-border-radius: 5px;
    text-decoration: none;
    border-radius: 5px;
    text-shadow: 0 1px 2px #000;
}
#warningWrap a.button:hover {
    background-color: #ea8422;
}
#warningWrap a.button:active {
    text-shadow: none;
}
#warningWrap .bottom {
    margin-top: -10px;
    text-align: center;
}
#warningWrap .bottom img {
    width: 50px;
}

#popNoticeWrap {
    width: 440px;
    height: 470px;
    border: 10px solid #5f115d;
    background-color:#ffffff;
}

#popNoticeWrap h1 {
    background-color: #5f115d;
    margin: 0;
    padding: 20px 5px 10px 5px;
    color: #FFFFFF;
    line-height: 17pt;
}

#popNoticeWrap h1 span {
    font-size : 11pt;
    color: #666666;
}

#popNoticeWrap #content {
    margin: 20px;
}

#popNoticeWrap #content h3 {
    font-family: malgunGothic;
    font-size: 14pt;
}

#popNoticeWrap #content h3 em {
    color : #2879ff;
    font-weight: bold;
    font-style: normal;
    font-size: 15pt;
}

#popNoticeWrap #content h3 img {
    width: 51px;
    float: left;
    margin-right: 5px;
}

#popNoticeWrap #content #conList {
    margin-top: 20px;
}

#popNoticeWrap #content #conList h4 {
    font-family: malgunGothic;
    font-weight: bold;
    font-size: 12pt;
    margin: 0 0 0 20px;
}

#popNoticeWrap #content #conList ul {
    margin-top: 5px;
    margin-bottom: 30px;
}

#popNoticeWrap #content #conList ul li {
    list-style: decimal;
    font-family: malgunGothic;
    font-size: 11pt;
    color: #3D3D3D;
    margin-bottom: 5px;
    margin-left: 20px;
}

#popNoticeWrap #content #conList ul li em {
    font-style: normal;
    font-weight: bold;
    color: #5f115d;
}

#popNoticeWrap #content #conList p {
    margin: 0 0 5px 0;
    color: #3D3D3D;
    text-indent: -1em;
    margin-left: 10px;
}

#popNoticeWrap #content #conList p a, #popNoticeWrap #content #conList p a:link {
    color: #e74147;
    font-weight: bold;
    font-size: 13pt;
    text-decoration: underline;
}

#popNoticeWrap #bottom {
    clear: both;
    margin-top: 45px;
    padding: 0 10px;
}

#popNoticeWrap #bottom #left {
    float:left;
}

#popNoticeWrap #bottom #right {
    float: right
}
