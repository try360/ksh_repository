	function uniqueArray(arr){
		var a = {};
		
		for(var i=0; i<arr.length; i++){
			if(typeof a[arr[i]]=='undefined'){
				a[arr[i]]=1;
			}
		}
		
		arr.length=0;
		for(var i in a){
			arr[arr.length]=i;
		}
		
		return arr;
	}
	
